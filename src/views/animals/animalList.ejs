<!DOCTYPE html>
<html lang="es-AR">
<%- include('../partials/head.admin.ejs') %>

    <body>
        <%- include('../partials/header.admin.ejs') %>
            <div class="container">
                <div class="d-flex align-items-center flex-column flex-md-row justify-content-between">
                    <h1 class="fs-3">Lista de Animales</h1>
                    <a href="/animals/create" class="btn btn-sm btn-primary"><i class="fas fa-paw"></i> Nuevo
                        ingreso</a>

                </div>
                <table class="table ">
                    <thead class="thead-dark ">
                        <tr>
                            <th>ID</th>
                            <th>Nombre</th>
                            <th>Edad</th>
                            <th>Zona</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% animals.forEach(function(animal) { %>
                            <tr>
                                <td>
                                    <%= animal.id %>
                                </td>
                                <td>
                                    <%= animal.name %>
                                </td>
                                <td>
                                    <%= animal.age %>
                                </td>
                                <td>
                                    <%= animal.city.name %> (<%= animal.city.province %> )
                                </td>
                                <td>
                                    <a href="/animals/edit/<%= animal.id %>" class="btn btn-sm btn-success"><i
                                            class="fas fa-pencil-alt"></i> Editar</a>
                                    <button class="btn btn-sm btn-danger" data-bs-toggle="modal"
                                    data-bs-target="#removeAnimal<%= animal.id %>" style="cursor: pointer;"><i
                                            class="fas fa-trash-alt"></i> Borrar</a>
                                </td>
                            </tr>
                            <!-- Modal -->
                            <div class="modal fade" id="removeAnimal<%= animal.id %>" tabindex="-1" aria-labelledby="removeAnimal<%= animal.id %>Label"
                                aria-hidden="true">
                                <div class="modal-dialog modal-dialog-centered">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h1 class="modal-title fs-5" id="removeAnimal<%= animal.id %>Label">Advertencia</h1>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                aria-label="Close"></button>
                                        </div>
                                        <form action="/animals/remove/<%= animal.id %>?_method=DELETE" method="POST">
                                            <div class="modal-body">
                                                ¿Está seguro que desea eliminar a <b><%= animal.name %></b> de la base de datos?
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary"
                                                    data-bs-dismiss="modal">Cancelar</button>
                                                <button type="submit" class="btn btn-danger">Sí, eliminar</button>
                                            </div>
                                        </form>
                                        
                                    </div>
                                </div>
                            </div>
                            <% }); %>
                    </tbody>
                </table>
            </div>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js" integrity="sha384-j1CDi7MgGQ12Z7Qab0qlWQ/Qqz24Gc6BM0thvEMVjHnfYGF0rmFCozFSxQBxwHKO" crossorigin="anonymous"></script>

    </body>

</html>