<!DOCTYPE html>
<html lang="es-AR">

  <%- include('partials/head') %>

<body class="container">

  <%- include('partials/header') %>

<!-- Sección Banner  -->
<div class="banner-container">
  <div class="banner">
    <img src="/images/banner-huellitas.png" alt="Banner-adopta-hoy" class="banner-img" />
  </div>

  <main class="content">
    <form action="buscar" method="get" id="search-form">
      <input type="text" id="search" name="search" placeholder="Buscar por zona o nombre" /><i
        class="fa-solid fa-magnifying-glass"></i>
    </form>

    <!-- Sección Animales en adopción -->

    <section id="animal-container">
      <h2 id="titulo-container">Animales en Adopción</h2>
      <div class="animales animal-list">
        <article class="animal">
          <% animals.forEach(({id,name, sex, age, zone, description, image})=> { %>
          <img src="<%= image %>" alt="img-animal" class="pets" />
          <div class="detalles-animal">
            <li class="nav-item">
              <a class="nav-link" href="/adoptions/preAdopt">
                <i class="fa-solid fa-heart"></i> Adoptar
              </a>
            </li>
            <h3><%= name %></h3>
            <h4>Adopción responsable</h4>
            <div class="descripcion-animal">
              <p class="sexo">Sexo: <%= sex %></p>
              <p class="edad">Edad : <%= age %></p>
              <p class="zona">Zona : <%= zone %></p>
              <button>
                <a href="/adoptions/adoptDetail/<%= id %>"><i class="fa-solid fa-bone"></i> Leer más</a>
              </button>
            </div>
          </div>
          <% }) %>
        </article>
      </div>
    </section>
    <section id="contacto">
      <h1>Contacto</h1>
      <p>Llena este formulario para ponernos en contacto con vos.</p>
      <div class="caja-formulario">
        <form id="formulario">
          <label for="name">Nombre Completo:</label>
          <input class="formulario-input" type="text" id="name" name="name" placeholder="Nombre y apellido" />
          <label for="email">Email:</label>
          <input class="formulario-input" type="email" name="email" id="email" placeholder="Email" />
          <label for="telefono">Teléfono:</label>
          <input class="formulario-input" type="tel" name="telefono" id="telefono" placeholder="Número de teléfono" />
          <label for="asunto">Asunto:</label>
          <input class="formulario-input" type="text" name="asunto" id="asunto"
            placeholder="Contanos por qué nos contactas" />
          <label for="mensaje">Tu mensaje</label>
          <textarea class="formulario-input" name="mensaje" id="mensaje" placeholder="Deja tu mensaje, duda o consulta"
            required></textarea>
          <button class="boton-enviar" type="submit">Enviar</button>
          <button class="boton-reset" type="reset">Borrar</button>
        </form>
      </div>
    </section>
  </main>

  <%- include('partials/footer') %>

  <!-- Bootstrap JS -->
  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
    integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
    integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
    integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
    crossorigin="anonymous"></script>
</body>

</html>